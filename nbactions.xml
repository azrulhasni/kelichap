<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:3.0.0:exec</goal>
            </goals>
            <properties>
                <exec.vmArgs></exec.vmArgs>
                <exec.args>${exec.vmArgs} -classpath %classpath ${exec.mainClass} ${exec.appArgs}</exec.args>
                <exec.appArgs></exec.appArgs>
                <exec.mainClass>com.azrul.kelichap.Application</exec.mainClass>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:3.0.0:exec</goal>
            </goals>
            <properties>
                <exec.vmArgs>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</exec.vmArgs>
                <exec.args>${exec.vmArgs} -classpath %classpath ${exec.mainClass} ${exec.appArgs}</exec.args>
                <exec.appArgs></exec.appArgs>
                <exec.mainClass>com.azrul.kelichap.Application</exec.mainClass>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:3.0.0:exec</goal>
            </goals>
            <properties>
                <exec.vmArgs></exec.vmArgs>
                <exec.args>${exec.vmArgs} -classpath %classpath ${exec.mainClass} ${exec.appArgs}</exec.args>
                <exec.mainClass>com.azrul.kelichap.Application</exec.mainClass>
                <exec.executable>java</exec.executable>
                <exec.appArgs></exec.appArgs>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-clean package -Pproduction</actionName>
            <displayName>clean package -Pproduction</displayName>
            <goals>
                <goal>clean</goal>
                <goal>package</goal>
                <goal>-Pproduction</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-clean install package -Pproduction</actionName>
            <displayName>clean install package -Pproduction</displayName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
                <goal>package</goal>
                <goal>-Pproduction</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-mvn compile jib:build</actionName>
            <displayName>mvn compile jib:build</displayName>
            <goals>
                <goal>mvn</goal>
                <goal>compile</goal>
                <goal>jib:build</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-compile jib:build</actionName>
            <displayName>compile jib:build</displayName>
            <goals>
                <goal>compile</goal>
                <goal>jib:build</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-mvn clean package -Pproduction -Dvaadin.force.production.build=true</actionName>
            <displayName>mvn clean package -Pproduction -Dvaadin.force.production.build=true</displayName>
            <goals>
                <goal>clean</goal>
                <goal>package</goal>
                <goal>-Pproduction</goal>
                <goal>-Dvaadin.force.production.build=true</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-Build jib</actionName>
            <displayName>Build jib</displayName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
                <goal>jib:build</goal>
                <goal>-Pproduction</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
    </actions>
